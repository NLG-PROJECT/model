# Redis Configuration
# For local Redis:
REDIS_URL=redis://localhost:6379
# For Upstash:
# REDIS_URL=redis://your-instance.upstash.io:port
REDIS_PREFIX=docstore
REDIS_USERNAME=  # Required for Upstash
REDIS_PASSWORD=  # Required for Upstash
REDIS_USE_SSL=false  # Set to true for Upstash
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_INDEX_NAME=embeddings_idx

# Embedding Configuration
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=llama2
EMBEDDING_DIMENSION=768
EMBEDDING_BATCH_SIZE=32

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
MIN_CHUNK_SIZE=100

# Google Drive Configuration
GOOGLE_DRIVE_CREDENTIALS_PATH=path/to/credentials.json
GOOGLE_DRIVE_ROOT_FOLDER_ID=your_root_folder_id

# Storage Configuration
STORAGE_CACHE_ENABLED=true
STORAGE_MAX_CACHE_SIZE=1000
STORAGE_CHUNK_SIZE=500
STORAGE_CHUNK_OVERLAP=50

# Groq Configuration
GROQ_CLOUD_API_KEY=your_groq_api_key

# Debug Mode
DEBUG=false 